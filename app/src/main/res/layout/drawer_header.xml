<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout_drawer_header_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_header_height"
    android:background="@mipmap/img_bg_header"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="@dimen/drawer_margin_bottom"
    android:paddingLeft="@dimen/drawer_margin_left"
    android:paddingRight="@dimen/drawer_margin_right"
    android:paddingTop="@dimen/drawer_margin_top">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/civ_drawer_profile_pic"
        android:layout_width="@dimen/drawer_profile_img_width"
        android:layout_height="@dimen/drawer_profile_img_height"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/colorAccent"
        android:src="@drawable/default_profile_pic" />

    <TextView
        android:id="@+id/tv_drawer_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:maxLines="1"
        android:singleLine="true"
        android:text="Srinivas Mudavath"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_drawer_mobile_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:maxLines="1"
        android:singleLine="true"
        android:text="+91 96328 83734"
        android:textColor="@color/white" />
</LinearLayout>